function [index, closest] = find_closest_point_on_the_line(position, xp, yp, last_index)
    last_index = max(last_index, 1);
    [closest, index] = min(sqrt((xp(last_index:last_index+150)-position(1)).^2+(yp(last_index:last_index+150)-position(2)).^2));
%     [closest, index] = min(sqrt((xp-position(1)).^2+(yp-position(2)).^2));
end
